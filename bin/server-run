#!/usr/bin/env bash
set -euo pipefail
PROJECT_DIR="$(cd -- "$(dirname "${BASH_SOURCE}")" ; cd .. > /dev/null 2>&1 && pwd -P)"
cd $PROJECT_DIR
./bin/env/java-setup
./bin/env/clojure-setup
./bin/env/lein-setup
source bin/database.sh
lein clean
lein with-profile +dev run server run -d "${DATABASE_URL}" "$@"
#lein run server run -d "${DATABASE_URL}" "$@"

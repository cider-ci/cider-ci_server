#!/usr/bin/env bash
set -euo pipefail
PROJECT_DIR="$(cd -- "$(dirname "${BASH_SOURCE}")" ; cd .. > /dev/null 2>&1 && pwd -P)"
cd $PROJECT_DIR
./bin/env/ruby-setup

source bin/database.sh

export SERVER_HTTP_PORT=${SERVER_HTTP_PORT:-'8881'}
export DATABASE_NAME=${DATABASE_NAME}
ruby ./cider-ci/bin/server-test-env-setup.rb "$@"

#vi: ft=sh

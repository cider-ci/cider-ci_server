#!/usr/bin/env bash
set -euo pipefail
PROJECT_DIR="$(cd -- "$(dirname "${BASH_SOURCE}")" ; cd .. > /dev/null 2>&1 && pwd -P)"
cd $PROJECT_DIR
./bin/env/java-setup
./bin/env/clojure-setup
./bin/env/lein-setup

source bin/database.sh

$(createdb "${PGDATABASE}" || exit 0) # prevent error when db exists
lein run server migrate -d "${DBURL}" "$@"

#vi: ft=sh
